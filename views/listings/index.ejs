<body class="main-container pt-16">
    <h3>ALL LISTINGS</h3>
    <!-- <form method="GET" action="/listings/new">
        <button>create new Listing</button>
    </form> -->
   
    <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-4 p-4">
      <% for(let listing of allListings){ %>
        <a href="/listings/<%= listing._id %>" class="h-full">
          <!-- Card Start -->
          <div class="bg-white rounded-xl shadow-md overflow-hidden hover:shadow-lg transition-shadow duration-300 h-full flex flex-col">
            <img class="w-full h-48 object-cover" src="<%= listing.image.url %>" alt="Listing image">
            <div class="p-4 flex flex-col flex-grow">
              <h2 class="text-xl font-semibold text-gray-800 mb-2"><%= listing.title %></h2>
              <p class="text-gray-600 mb-3 flex-grow"><%= listing.description %></p>
              <div class="flex justify-between text-sm text-gray-700">
                <span><strong>Price:</strong> â‚¹<%= listing.price %></span>
                <span><strong>Location:</strong> <%= listing.location %></span>
              </div>
              <div class="mt-2 text-sm text-gray-700">
                <strong>Country:</strong> <%= listing.country %>
              </div>
            </div>
          </div>
          <!-- Card End -->
        </a>
      <% } %>
    </div>
    
        

    <ul>
       <% for(let listing of allListings){ %>
            <li>
               <a href="/listings/<%=listing.id%>"><%= listing.title %></a> 
            </li>
        <% } %>
    </ul>
</body>
